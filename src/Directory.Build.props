<Project>
  <PropertyGroup>
    <TargetFrameworks>net5.0;netstandard2.0;netstandard2.1;netcoreapp3.1</TargetFrameworks>
    <LangVersion>9</LangVersion>
    <NoWarn>$(NoWarn);CS1591;CS0618;</NoWarn>
    <IsPackable>true</IsPackable>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>$(AssemblyName)</PackageId>
    <PackageVersion>$(PackageVersion)</PackageVersion>
    <AssemblyVersion>$(AssemblyVersion)</AssemblyVersion>
    <FileVersion>$(FileVersion)</FileVersion>
    <Company>Ubiquitous AS</Company>
    <Copyright>Copyright Â© $([System.DateTime]::Now.Year) Ubiquitous AS</Copyright>
    <PackageProjectUrl>https://github.com/ubiquitousas/metrics</PackageProjectUrl>
<!--    <PackageIcon>icon.svg</PackageIcon>-->
    <PackageTags>metrics;prometheus;statsd</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryUrl>https://github.com/ubiquitousas/metrics</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
<!--    <None Include="../../icon.svg" Pack="true" Visible="false" PackagePath=""/>-->
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="MinVer" Version="2.4.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="JetBrains.Annotations" Version="2020.3.0" PrivateAssets="All" />
  </ItemGroup>

</Project>